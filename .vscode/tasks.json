{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "shell",
          "label": "g++ build active file",
          "command": "C:/msys64/mingw64/bin/g++.exe",
          "args": [
              "-g",
              "-std=c++11",
              "${fileDirname}\\*.cpp",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
              "cwd": "${fileDirname}",
              "env": {
                  "TMPDIR": "${workspaceFolder}\\temp",
                  "TMP": "${workspaceFolder}\\temp",
                  "TEMP": "${workspaceFolder}\\temp"
              }
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
      }
  ]
}